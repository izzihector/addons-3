<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record id="sr_property_agent_commission_lines_tree_view"
		model="ir.ui.view">
		<field name="name">sr.property.agent.commission.lines.tree.view</field>
		<field name="model">sr.property.agent.commission.lines</field>
		<field name="arch" type="xml">
			<tree string="Agent Commission Lines" class="o_sale_order"
				create="false" edit="false" sample="1">
				<field name="name" string="Number" readonly="1"
					decoration-bf="1" />
				<field name="property_id" string="Property" />
				<field name="tenancy_agreement_id" />
				<field name="agent_id" />
				<field name="commission_type" widget="radio" />
				<field name="commission_amount" />
				<field name="is_commission_settled" invisible="1"/>
				<field name="commission_settlement_id" invisible="1"/>
			</tree>
		</field>
	</record>

	<record id="sr_property_agent_commission_lines_form_view"
		model="ir.ui.view">
		<field name="name">sr.property.agent.commission.lines.form.view</field>
		<field name="model">sr.property.agent.commission.lines</field>
		<field name="arch" type="xml">
			<form string="Agent Commission Lines" create="false"
				edit="false">
				<sheet>
					<div class="oe_button_box" name="button_box">
					</div>
					<div class="oe_title">
						<h1>
							<field name="name" readonly="1" />
						</h1>
					</div>
					<group>
						<group>
							<field name="property_id" />
							<field name="tenancy_agreement_id" />
							<field name="date" />
						</group>
						<group>
							<field name="agent_id" />
							<field name="commission_type" widget="radio" />
							<field name="currency_id" />
							<field name="commission_amount" widget="monetary"
								options="{'currency_field': 'currency_id', 'field_digits': True}" />
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>


	<record id="sr_property_agent_commission_lines_action"
		model="ir.actions.act_window">
		<field name="name">Agent Commission Lines</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">sr.property.agent.commission.lines</field>
		<field name="view_mode">tree,form</field>
	</record>


	<record id="sr_property_agent_commission_settlement_tree_view"
		model="ir.ui.view">
		<field name="name">sr.property.agent.commission.settlement.tree.view
		</field>
		<field name="model">sr.property.agent.commission.settlement</field>
		<field name="arch" type="xml">
			<tree string="Commissions Settlement" class="o_sale_order">
				<field name="name" string="Number" readonly="1"
					decoration-bf="1" />
				<field name="date" string="Date"  />
				<field name="agent_id" />
			</tree>
		</field>
	</record>


	<record id="sr_property_agent_commission_settlement_form_view"
		model="ir.ui.view">
		<field name="name">sr.property.agent.commission.settlement.form.view</field>
		<field name="model">sr.property.agent.commission.settlement</field>
		<field name="arch" type="xml">
			<form string="Commissions Settlement">
			<header>
					<button name="action_confirm" string="Confirm Settlement"
						type="object" class="oe_highlight" states="new" />
						
					<button name="calculate_agent_commission" string="Calculate Commission"
						type="object" class="oe_highlight" states="new" />
						
					<button name="action_create_invoice" string="Create invoice"
						type="object" class="oe_highlight"  states="confirm"/>
						
					<field name="state" widget="statusbar"
						statusbar_visible="new,confirm,invoiced" />
				</header>
				<sheet>
				
					<div class="oe_button_box" name="button_box">
					</div>
					<div class="oe_title">
						<h1>
							<field name="name" readonly="1" />
						</h1>
					</div>
					<group>
						<group>
							<field name="date"  readonly="1"/>
						</group>
						<group>
							<field name="agent_id" domain="[('is_agent','=', True)]" attrs="{'readonly': [('state', 'not in', ['new'])]}"/>
						</group>
					</group>
					<notebook>
						<page string="Commission Lines">
							<field name="agent_commission_line_ids" readonly="1">
								<tree>
								<field name="commission_line"/>
									<field name="property_id"/>
									<field name="tenancy_agreement_id"/>
									<field name="date"/>
									<field name="commission_amount"/>
								</tree>
							</field>
						</page>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>


	<record id="sr_property_agent_commission_settlement_action"
		model="ir.actions.act_window">
		<field name="name">Commissions Settlement</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">sr.property.agent.commission.settlement</field>
		<field name="view_mode">tree,form</field>
	</record>

</odoo>